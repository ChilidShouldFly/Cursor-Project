{
  "manifest_version": 3,
  "name": "番茄钟",
  "version": "1.2.0",
  "description": "一个简单的番茄工作法计时器",
  "permissions": [
    "notifications",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [{
    "resources": ["images/*", "icon.png"],
    "matches": ["<all_urls>"]
  }]
} 