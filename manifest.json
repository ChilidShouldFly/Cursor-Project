{
  "manifest_version": 3,
  "name": "好番茄钟",
  "version": "1.3.0",
  "description": "一个好东西牌番茄钟",
  "permissions": [
    "notifications",
    "storage",
    "tabs",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [{
    "resources": [
      "images/*.jpg",
      "images/*.jpeg",
      "images/*.png",
      "images/*.gif",
      "icon.png",
      "notification-messages.md"
    ],
    "matches": ["<all_urls>"]
  }]
} 